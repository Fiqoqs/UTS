<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow_back"/>

    <TextView
        android:id="@+id/nama"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:text="_iknip"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@+id/back"/>

    <ImageView
        android:id="@+id/bel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_bell"
        android:layout_toEndOf="@+id/nama"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_titik_tiga"
        android:layout_toRightOf="@id/bel"
        android:paddingLeft="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/nama"
        android:paddingTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/pp" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="    6956 Postingan"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="    27,7jt Pengikut"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="     219 Mengikuti"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/usern"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:text="Ikhwan Hanipp"
        android:paddingTop="130dp"
        android:layout_below="@id/back"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/kerja"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@id/usern"
        android:text="Programmer"
        android:textColor="@color/gray"
        android:paddingTop="2dp"/>

    <TextView
        android:id="@+id/penjelasan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="10dp"
        android:text="“You might not think that programmers are  artists, but programming is an extremely creative profession. It’s  logic-based creativity.” – John Romero  💻"
        android:layout_below="@id/kerja"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ep"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_below="@id/penjelasan"
        android:text="Edit Profile"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/penjelasan"
        android:layout_toRightOf="@id/ep"
        android:paddingLeft="20dp"
        android:text="Bagikan Profile"/>
</RelativeLayout>
